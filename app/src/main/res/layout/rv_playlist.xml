<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/songImageRVPlaylist1"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            tools:src="@drawable/album_art_sample" />

        <ImageView
            android:id="@+id/songImageRVPlaylist2"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_toEndOf="@id/songImageRVPlaylist1"
            tools:src="@drawable/album_art_sample" />

        <ImageView
            android:id="@+id/songImageRVPlaylist3"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@id/songImageRVPlaylist1"
            tools:src="@drawable/album_art_sample" />

        <ImageView
            android:id="@+id/songImageRVPlaylist4"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@id/songImageRVPlaylist2"
            android:layout_toEndOf="@id/songImageRVPlaylist3"
            tools:src="@drawable/album_art_sample" />

        <TextView
            android:id="@+id/playlistRVPlaylistName"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@id/songImageRVPlaylist4"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_bold"
            android:maxLines="1"
            android:text="@string/title_playlist"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_width="@dimen/_210sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/playlistRVPlaylistName"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@id/songImageRVPlaylist4"
            android:fontFamily="@font/manrope_regular"
            android:text="@string/number_of_tracks"
            android:textColor="@color/gray"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/searchRVCross"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more"
            app:tint="@color/gray" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>