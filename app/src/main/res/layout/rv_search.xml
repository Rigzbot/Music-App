<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/searchRVImage"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/album_art_sample"
            android:layout_marginEnd="@dimen/_15sdp" />

        <TextView
            android:id="@+id/searchRVSongName"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/searchRVImage"
            android:fontFamily="@font/manrope_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/song_name"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:layout_width="@dimen/_210sdp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/searchRVImage"
            android:fontFamily="@font/manrope_regular"
            android:layout_below="@id/searchRVSongName"
            android:textColor="@color/gray"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/singer"
            android:ellipsize="end"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/searchRVCross"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_cross"
            app:tint="@color/gray"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>